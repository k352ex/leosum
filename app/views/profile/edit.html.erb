<div style="width: 500px;margin: 0 auto; padding-top: 150px;">
  <%= form_for :profile, url: profile_path(@profile), method: :patch do |f| %>
    <p>
      <%= f.label :content %><br>
      <%= f.text_field :content %>
      <%= hidden_field_tag(:user_id, current_user.id) %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end %>

  <%= link_to 'Back', profile_path %>
</div>
