
<div id="register_background">
  <%= image_tag "logo.png" , width: 700, height: 300, class: "logo", id:"logo-register"%>
    <div class="register_form" id="main_background">
      <!-- <%= image_tag "logo.png" , width: 700, height: 300, class: "logo", id:"logo-register"%> -->
      <div class="form" id="main_form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group" id="register_form">
            <%= f.text_field :username, class: "form-control", placeholder:"이름", autofocus: true, :required => true, autocomplete: "off" %>
          </div>

          <div class="form-group" id="register_form">
            <%= f.email_field :email, class: "form-control", placeholder:"이메일", autofocus: false, :required => true %>
          </div>

          <div class="form-group" id="register_form">
            <%= f.password_field :password, class: "form-control", placeholder: "비밀번호", autocomplete: "off" , :required => true%>
          </div>

          <div class="form-group" id="register_form">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "비밀번호 재확인" , autocomplete: "off" , :required => true %>
          </div>

          <div class="form-group" id="register_form">
            <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default"><%= image_tag "register_btn-01.png" , width: 140, height: 73 %> </button>
              <button type="button" class="btn btn-default"><%= image_tag "register_btn-02.png" , width: 140, height: 73 %> </button>
            </div>
          </div>

          <div class="form-group" id="register_submit">
              <%= f.submit "회원 가입" , class: "btn2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
