<!-- 회원가입 페이지  -->
<!-- 아티스트 or 방문객인지 체크하는 버튼 만들기 -->

<div class="header" id="main_background">
  <div class="form" id="main_form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group" id="form_group">
        <%= f.text_field :username, class: "form-control", id: "exampleInputEmail1", placeholder: "이름", autofocus: true, :required => true %>
      </div>

      <div class="form-group" id="form_group">
        <%= f.email_field :email, class: "form-control", id: "exampleInputEmail1", placeholder: "이메일", autofocus: false, :required => true %>
      </div>

      <div class="form-group" id="form_group">
        <%= f.password_field :password, class: "form-control", id: "exampleInputPassword1", placeholder: "비밀번호", autocomplete: "off" , :required => true%>
      </div>

      <div class="form-group" id="form_group">
        <%= f.password_field :password_confirmation, class: "form-control", id: "exampleInputPassword1", placeholder: "비밀번호 재확인" , autocomplete: "off" , :required => true %>
      </div>

      <div class="section_login_bar">
          <%= f.submit "회원 가입" , class: "btn btn-theme-dark btn-md"  %>
      </div>
    <% end %>
  </div>
</div>
